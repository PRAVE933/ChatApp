modules = ["kotlin", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AndroidBuild"

[[workflows.workflow]]
name = "AndroidBuild"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export ANDROID_HOME=$PWD/android-sdk && ./gradlew assembleDebug"

[deployment]
run = ["sh", "-c", "export ANDROID_HOME=$PWD/android-sdk && ./gradlew assembleDebug"]
